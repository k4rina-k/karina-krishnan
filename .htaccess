RewriteEngine On

# Handle root domain - serve index.html for /
DirectoryIndex index.html

# Remove .html extension from URLs
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^([^\.]+)$ $1.html [NC,L]

# Redirect .html URLs to clean URLs (except index.html)
RewriteCond %{THE_REQUEST} \s/+([^.\s?]+)\.html[\s?] [NC]
RewriteRule ^(.*)\.html$ /%1 [R=301,L]

# Redirect uppercase FRC.html to lowercase frc.html
RewriteCond %{REQUEST_URI} ^/FRC\.html$
RewriteRule . /frc.html [R=301,L]

# Special case: redirect index.html to root
RewriteCond %{THE_REQUEST} \s/+index\.html[\s?] [NC]
RewriteRule ^index\.html$ / [R=301,L]